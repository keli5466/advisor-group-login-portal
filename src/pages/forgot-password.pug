extends ../layouts/default.pug
//- 
block headline
	- var headline = "Forgot Password";
	- var subheadline = "Select your authentication method:";

block progress
	
block content
	block form
		form.form--tiles.roll-over()
			.form-wrapper
				.form-field-radio
					
					//-option for security question
					input.radio-button#security-question(
						type="radio"
						name="radio")
					.radio-tile
						.center-wrapper
							.tile-icon.icon-security-question
							label.radio-tile-label(for='security-question') Answer a Security <br>Question
							
					//-option for email
				.form-field-radio
					input.radio-button#passcode-via-email(
						type="radio"
						name="radio")
					.radio-tile
						.center-wrapper
							.tile-icon.icon-email-passcode
							label.radio-tile-label(for='passcode-via-email') Get a Passcode <br>via Email
				
				//-option for paddcode
				.form-field-radio
					input.radio-button#password-via-text(
						type="radio"
						name="radio")
					.radio-tile
						.center-wrapper
							.tile-icon.icon-passcode-phone(style="margin-right:15px")
							label.radio-tile-label(for='password-via-text') Get a Passcode<br> via Text

			button.btn.btn--primary(type='') Continue
			
