#enroll //-specfic for enroll page
	.radio-tile-label
		font-size 24px


//Form with tiles
.form--tiles
	width 80vw
	.form-wrapper
		padding rem(36px) 0
		flex-flow row wrap
		display flex
		justify-content center
		.form-bottom-bopy
			text-align center

		//-Default -- tile without background color and right border
		.form-field-radio
			position relative
			height  rem(tile-height)
			width   rem(tile-width)
			margin 5px
			@media (min-width tablet)
				line(1px ,dark-grey, line, 80px)//Line mixin
				&:after
					opacity 0.2
					right -5%
				&:last-child
					&:after
						visibility hidden


			.radio-tile
				width 100%
				height 100%
				.tile-icon
					font icon, 64px, primary-blue
					margin-bottom 14px
				label
					font bold, 18px, dark-grey
					line-height: 1.33
					letter-spacing: 0.3px
					@extend .center //-vertical and horizontal centering

			input.radio-button
				opacity 0
				position absolute
				top 0
				z-index 1
				left 0
				height 100%
				width 100%
				margin 0
				cursor pointer


	.cta.more-info-tool-tip
		margin-top 23px
		display block
		width 100%



//Roll Over-- Tiles with Background Color and Roll Over Effect
.roll-over
	.form-field-radio
		box-shadow 2px 6px 50px 0 rgba(86, 96, 101, 0.15)
		background white
		.radio-title
			transition transform 300ms ease
		&:hover
			transition box-shadow .2s
			box-shadow 0 60px 60px 0 rgba(86, 96, 101, 0.3)
		&:after
			border-left none!important

	//Turn Radio Box Blue and Items White
	input.radio-button:checked + .radio-tile
		transition background .2s ease-in-out
		background-color: primary-blue
		color white
		.tile-icon
		.radio-tile-label
			color white
