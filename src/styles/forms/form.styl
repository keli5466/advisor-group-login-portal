//Globals for Form
form
	max-width max-w
	margin 0 auto
	.form-wrapper
		padding rem(46px) 5%
		width 100% //-Needed for IE


//Wrapper for form element
.form-field
	width 100%
	padding-bottom rem(36px)
	//Needed to make form inputs side by side
	&.split
		width 45%
		float left
		@media (max-width mobile)
			width 100%
//Left spacing for split feild
.left-space
	margin-left 10%
	@media (max-width mobile)
		margin-left 0


//Form label
label
	text-align left
	font bold, 14px, dark-grey
	display block
	margin-bottom rem(12px)
	position relative
	a
		position absolute
		right 0
		font-weight 400

	&.hidden	//-Needed for .split to stack inputs under one label
		@media (max-width mobile)
			display none


//Wrapper for Label and span(icon,more-info,forgot password etc)
.label
	text-align left
	display block
	margin-bottom 12px
	position relative
	label
		display inline-block
		margin-bottom 0
	span
		position absolute
		right 0
		padding 0


//Inputs
input,
select
	width 100%
	height 62px
	font bold, 16px, dark-grey
	border solid #0000001f 2px
	background-color white
	box-shadow primary-box-shadow
	transition border 200ms, box-shadow .2s

	//active and hover states
	&:hover
		border: solid 2px #3ba6ef
	&:active
		opacity 1
	&:focus
		opacity 1
		outline none
		box-shadow input-box-shadow
		background-color #ffffff


//-Simple Input Form
.form--simple
	.form-wrapper
		.form-field
			&:last-child
				padding-bottom 0

		input:-ms-input-placeholder // IE needed it's own unique rule
			font regular, 16px, light-grey
		input::placeholder
			font regular, 16px, light-grey
		input::-ms-clear, input::-ms-reveal
			display: none

		input
			border-radius: 6px
			background-color white
			text-align left
			padding-left form-input-padding
			&:focus
				border-color input-blue
				box-shadow: 4px 20px 35px 0 rgba(21, 145, 252, 0.16)



//Form used to put in passcode
.form--passcode
	width 90vw
	padding-top rem(90px)
	label
		font-size 20px
		text-align center
		margin-bottom rem(24px)

//terms and services
.terms-services
	width 100%
	margin 0 auto
	clear both
	padding-bottom 1%
	text-align center
	p
		margin 0
		padding 0
		position relative
